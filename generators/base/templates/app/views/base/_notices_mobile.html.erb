<% end %>
<% if @friend_applies_count && @friend_applies_count != 0 %>
	<%= link_basic_to "#{t('view.noun.base_friend')}申請が#{@friend_applies_count}件あります。", :controller => 'base_friend_apply', :action => 'list' %><br />
<% end %>
