<div style="text-align:left">

<% if @notices.size.zero? %>
	<%= t('view.noun.base_notice') %>はありません。<br />

<% else %>
	<% @notices.each do |notice| %>
    	<% list_cell_for do %>
      		<%= link_to_list_cell notice.title, :controller => 'base_notice', :action => 'show', :id => notice.id %>
	  		<%= notice_new_if_new(notice.start_datetime) %><br />
      		<%= date_to_s(notice.start_datetime) %>
      	<% end %>
	<% end %>
<% end %>

</div>

<div style="text-align:right">
	   >><%= link_to_list_cell "一覧", :controller => 'base_notice', :action => 'list' %><br />
</div>

