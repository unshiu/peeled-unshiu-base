<% content_for(:header_title) do %>
<%= t('view.noun.base_friend') %>申請承認/拒否
<% end %>

<div class="notice">
	<%= link_to_user (@apply.base_user) %>の<%= t('view.noun.base_friend') %>リクエストを承認しますか？
</div>

<div class="diary_story_box box_outer clearfix community_topic_list">
	<div class="community_topic_author">
		<%= safe_profile_view(@apply.base_user.base_profile, :large, { :width => "70", :height => "70", :class => "left", :alt => @apply.base_user.show_name }) %>
	</div>
	<div class="community_topic_text">
		<h6><span><%= link_to_user @apply.base_user %></span></h6>
		<div class="diary_text box_outer small">
			<p>
				<%= body_summary(@apply.base_user.base_profile.try(:introduction), :length => 80) %>
			</p>
		</div>
	</div>
</div>

<% form_tag :action => 'permit', :id => @apply.id do %>
	<%= button_tag("permit", "承認", "tick") %>
<% end %>
<% form_tag :action => 'deny', :id => @apply.id do %>
	<%= button_tag("deny", "拒否", "cross") %>
<% end %>